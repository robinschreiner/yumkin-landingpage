---
import HeaderLink from "./HeaderLink.astro";
import YumkinLogo from "./YumkinLogo.astro";

const {
  heroSize = "none",
  heroImage = "",
  title = "",
  description = "",
} = Astro.props;
---

<header
  class={`relative ${heroSize !== "none" ? "bg-brand" : ""}`}
  style={heroImage.src
    ? `background-image: url(${heroImage.src}); background-size: cover; background-position: center;`
    : ""}
>
{
    heroSize !== "none" && (
  <!-- Overlay -->
  <div
    class={`absolute inset-0 bg-black opacity-30 z-20 ${heroSize !== "none" ? "bg-brand" : ""}`}
  >
  </div>
  <div
    class={`absolute inset-0 from-brand bg-gradient-to-tr to-secondary opacity-70 z-10 ${heroSize !== "none" ? "bg-brand" : ""}`}
  >
  </div>
      )
    }

  <nav class="relative flex justify-between py-8 px-6 max-w-7xl mx-auto z-20">
    <h2>
      <a href={`${import.meta.env.BASE_URL}`}>
        <YumkinLogo type={heroSize === "none" ? "brand" : "inverted"} />
      </a>
    </h2>
    <div
      class={`flex gap-2 ${heroSize === "none" ? "text-brand" : "text-white"}`}
    >
      <HeaderLink href={`${import.meta.env.BASE_URL}`}>Home</HeaderLink>
      <HeaderLink href={`${import.meta.env.BASE_URL}about`}
        >Unternehmen</HeaderLink
      >
      <HeaderLink href={`${import.meta.env.BASE_URL}blog`}
        >Neuigkeiten</HeaderLink
      >
    </div>
    <div>
      <button>Login</button>
      <button>Get the App</button>
    </div>
  </nav>

  {
    heroSize !== "none" && (
      <div
        class={`mb-8 relative z-20 mx-auto w-full flex items-end p-6 ${
          heroSize === "small"
            ? "h-[30vh]"
            : heroSize === "large"
              ? "h-[70vh]"
              : "h-[30vh]"
        }`}
      >
        <div class="max-w-7xl py-12 px-6 mx-auto w-full h-auto text-white">
          <h1 class="max-w-[40%] min-w-[256px]">
            <span class="text-3xl md:text-4xl lg:text-5xl font-semibold block">
              {title}
            </span>
            <span class="text-lg md:text-xl lg:text-2xl opacity-70">
              {description}
            </span>
          </h1>
        </div>
      </div>
    )
  }
</header>
