---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import YumkinLogo from "./YumkinLogo.astro";
import Hero from "../components/Hero.astro";

const { heroSize = "none", title = "", description = "" } = Astro.props; // Default to "none" if no value is provided
---

<header
  class={heroSize === "none"
    ? ""
    : heroSize === "small"
      ? "pb-[26vh]"
      : heroSize === "large"
        ? "pb-[62vh]"
        : ""}
>
  <nav class="flex justify-between py-8 px-6 max-w-7xl mx-auto">
    <h2>
      <a href={`${import.meta.env.BASE_URL}`}>
        <!-- {SITE_TITLE} -->
        <YumkinLogo
          type={`${heroSize === "none" || !heroSize ? "brand" : "inverted"}`}
        />
      </a>
    </h2>
    <div
      class={`flex gap-2 ${heroSize === "none" || !heroSize ? "text-brand" : "text-white"}`}
    >
      <HeaderLink href={`${import.meta.env.BASE_URL}`}>Home</HeaderLink>
      <HeaderLink href={`${import.meta.env.BASE_URL}about`}
        >Unternehmen</HeaderLink
      >
      <HeaderLink href={`${import.meta.env.BASE_URL}blog`}
        >Neuigkeiten</HeaderLink
      >
    </div>
    <div>
      <button>Login</button>
      <button>Get the App</button>
    </div>
  </nav>
  {
    heroSize !== "none" && (
      <Hero heroSize={heroSize} title={title} description={description} />
    )
  }
  <!-- Conditionally render the Hero component -->
</header>
